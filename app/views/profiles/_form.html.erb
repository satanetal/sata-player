    <%= form.file_field :avatar %>
    <%= form.hidden_field :avatar_cache %>
    
  </div>
  <div class="Dropboxlink">
  <form>
<input type="button" value="Кнопка" onClick='location.href="<%= @link %>"'>
</form>
    <a href=>Link for dropbox</a>
    
    <%= form.label :dropbox_request_token %>
    <%= form.text_field :dropbox_request_token %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
